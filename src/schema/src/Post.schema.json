{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "html": {
      "title": "Content",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Block",
        "anyOf": [
          {
            "title": "text",
            "properties": {
              "text": { "type": "string", "default": "" }
            }
          },
          {
            "title": "image",
            "properties": {
              "images": { "type": "array", "items": {} }
            }
          },
          {
            "title": "video",
            "properties": {
              "videos": { "type": "array", "items": {} }
            }
          }
        ]
      }
    },
    "generalId": {
      "type": "integer"
    },
    "authorEmail": {
      "type": "string"
    }
  }
}

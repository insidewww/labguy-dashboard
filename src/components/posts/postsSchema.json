{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "general": {
      "title": "General",
      "$ref": "#/definitions/GeneralProperties"
    },
    "details": {
      "type": "object",
      "title": "Details",
      "properties": {
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "Block",
            "oneOf": [
              {
                "title": "Text",
                "properties": {
                  "html": {
                    "type": "string",
                    "default": ""
                  }
                },
                "required": ["html"],
                "additionalProperties": false
              },
              {
                "title": "Image",
                "properties": {
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  }
                },
                "required": ["images"],
                "additionalProperties": false
              }
            ]
          }
        }
      }
    }
  },
  "required": ["general", "details"],
  "definitions": {
    "GeneralProperties": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "title": "Title",
          "minLength": 3,
          "default": "Example Title"
        },
        "slug": {
          "type": "string",
          "title": "Slug"
        },
        "tags": {
          "type": "array",
          "title": "Tags",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "public": {
          "type": "boolean",
          "title": "Public",
          "default": true
        }
      },
      "required": ["title"]
    }
  }
}

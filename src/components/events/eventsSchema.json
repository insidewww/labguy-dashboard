{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3,
      "title": "Title",
      "errorMessage": {
        "minLength": "Title is required."
      }
    },
    "subtitle": {
      "type": "string",
      "title": "Subtitle"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "start_date": {
      "type": "string",
      "format": "date-time",
      "title": "Start Date"
    },
    "end_date": {
      "type": "string",
      "format": "date-time",
      "title": "End Date",
      "errorMessage": {
        "format": "End date must be equal to or later than start date."
      }
    },
    "venue": {
      "type": "string",
      "title": "Venue"
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "images": {
      "type": "array",
      "title": "Images",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "default": []
    },
    "external_urls": {
      "type": "array",
      "title": "External URLs",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "title": "URL",
            "default": "https://example.com/dogs"
          }
        },
        "required": ["url"]
      }
    },
    "public": {
      "type": "boolean",
      "title": "Public",
      "default": true
    }
  },
  "required": ["title"],
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "general": {
      "title": "General",
      "$ref": "#/definitions/GeneralProperties"
    },
    "details": {
      "type": "object",
      "title": "Details",
      "properties": {
        "medium": {
          "type": "array",
          "title": "Medium",
          "items": {
            "type": "string",
            "default": ""
          },
          "description": "List of mediums used in artwork production e.g charcoal, T6 aluminum"
        },
        "dimensions": {
          "type": "string",
          "title": "Dimensions",
          "description": "e.g 30x90x100 "
        },
        "year": {
          "type": "integer",
          "title": "Year",
          "minimum": 0,
          "maximum": 9999,
          "default": 1996,
          "description": "Year when the object was created or produced."
        },
        "events": {
          "type": "array",
          "title": "Events",
          "items": {
            "type": "string"
          },
          "description": "List of events related to the object."
        },
        "images": {
          "type": "array",
          "title": "Images",
          "items": {}
        }
      },
      "required": ["medium", "year", "events", "images"]
    }
  },
  "required": ["general", "details"],
  "definitions": {
    "GeneralProperties": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "title": "Title",
          "minLength": 3,
          "default": "Example Title"
        },
        "slug": {
          "type": "string",
          "title": "Slug",
          "description": "Unique identifier used for URL of the page.  e.g 'https://example.com/brown-dog'"
        },
        "tags": {
          "type": "array",
          "title": "Tags",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "public": {
          "type": "boolean",
          "title": "Public",
          "default": true
        }
      },
      "required": ["title"]
    }
  }
}

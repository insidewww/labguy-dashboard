{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Edit Work",
  "type": "object",
  "properties": {
    "general": {
      "title": "General",
      "$ref": "#/definitions/GeneralProperties"
    },
    "details": {
      "type": "object",
      "title": "Details",
      "properties": {
        "medium": {
          "type": "array",
          "title": "Medium",
          "items": {
            "type": "string",
            "default": ""
          }
        },
        "year": {
          "type": "integer",
          "title": "Year",
          "minimum": 0,
          "maximum": 9999
        },
        "events": {
          "type": "array",
          "title": "Events",
          "items": {
            "type": "object"
          }
        },
        "images": {
          "type": "array",
          "title": "Images",
          "items": {
            "type": "object"
          }
        }
      },
      "required": ["medium", "year", "events", "images"]
    }
  },
  "required": ["general", "details"],
  "definitions": {
    "GeneralProperties": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "title": "Title",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "title": "Slug"
        },
        "tags": {
          "type": "array",
          "title": "Tags",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "public": {
          "type": "boolean",
          "title": "Public",
          "default": true
        }
      },
      "required": ["title"]
    }
  }
}

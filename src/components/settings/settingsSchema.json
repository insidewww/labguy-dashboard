{
  "type": "object",
  "default": {},
  "properties": {
    "general": {
      "title": "General",
      "type": "object",
      "default": {},
      "properties": {
        "website": {
          "title": "Website",
          "type": "object",
          "default": {},
          "properties": {
            "details": {
              "title": "Details",
              "type": "object",
              "default": {},
              "properties": {
                "name": {
                  "title": "Name",
                  "type": "string"
                },
                "domain": {
                  "title": "Domain",
                  "type": "string",
                  "default": "example.com"
                },
                "favicon": {
                  "title": "Favicon",
                  "default": null
                }
              }
            },
            "homepage": {
              "title": "Homepage",
              "type": "object",
              "default": {},
              "properties": {
                "header": {
                  "title": "Header",
                  "type": "string",
                  "default": "A new website!"
                },
                "subheader": {
                  "title": "Subheader",
                  "type": "string",
                  "default": "..."
                },
                "background": {
                  "title": "Background",
                  "default": null
                },
                "metadata": {
                  "title": "Metadata",
                  "properties": {
                    "title": {
                      "type": "string",
                      "default": "Default Title"
                    },
                    "description": {
                      "type": "string",
                      "default": "Default description for the homepage."
                    }
                  }
                }
              }
            }
          }
        },
        "dashboard": {
          "title": "Dashboard",
          "type": "object",
          "default": {},
          "properties": {
            "dark_mode": {
              "title": "Dark Mode",
              "type": "boolean",
              "default": false
            }
          }
        },
        "apis": {
          "title": "APIs",
          "type": "object",
          "default": {},
          "properties": {
            "server": {
              "title": "Server",
              "type": "object",
              "default": {},
              "properties": {
                "api_url": {
                  "title": "API URL",
                  "type": "string",
                  "default": "http://example.com/api/"
                }
              }
            },
            "youtube": {
              "title": "Youtube",
              "type": "object",
              "properties": {
                "api_key": {
                  "title": "API Key",
                  "type": "string",
                  "default": "your_api_key"
                }
              }
            },
            "cld": {
              "title": "CLD",
              "type": "object",
              "default": {},
              "properties": {
                "enable": {
                  "title": "Enable CLD",
                  "type": "boolean",
                  "default": false
                }
              },
              "if": {
                "properties": {
                  "enable": {
                    "const": true
                  }
                }
              },
              "then": {
                "properties": {
                  "api_url": {
                    "title": "API URL",
                    "type": "string",
                    "default": "https://api.cloudinary.com/v1_1/"
                  },
                  "api_key": {
                    "title": "API Key",
                    "type": "string",
                    "default": "your_api_key"
                  },
                  "cloud_name": {
                    "title": "Cloud Name",
                    "type": "string",
                    "default": "your_cloud_name"
                  },
                  "preset_name": {
                    "title": "Preset Name",
                    "type": "string",
                    "default": "your_preset_name"
                  }
                }
              }
            }
          }
        }
      }
    },
    "profile": {
      "title": "Profile",
      "type": "object",
      "default": {},
      "properties": {
        "bio": {
          "title": "Bio",
          "type": "object",
          "default": {},
          "properties": {
            "statement": {
              "title": "Statement",
              "type": "object",
              "default": {},
              "properties": {
                "html": {
                  "title": "HTML",
                  "type": "string",
                  "default": "This is a default bio statement."
                }
              }
            },
            "additional": {
              "title": "Additional",
              "type": "array",
              "default": [],
              "items": {
                "title": "Additional Item",
                "type": "object",
                "default": {},
                "properties": {
                  "title": {
                    "title": "Title",
                    "type": "string",
                    "default": "Default Additional Title"
                  },
                  "html": {
                    "title": "HTML",
                    "type": "string",
                    "default": "<p>Default additional HTML content.</p>"
                  }
                }
              }
            }
          }
        },

        "contact": {
          "title": "Contact",
          "type": "array",
          "default": [],
          "items": {
            "title": "Contact Item",
            "type": "object",
            "default": {},
            "properties": {
              "email": {
                "title": "Email",
                "type": "string",
                "default": "contact@example.com"
              },
              "socialmedia": {
                "title": "Social Media",
                "type": "array",
                "default": [],
                "items": {
                  "title": "Social Media Item",
                  "type": "object",
                  "default": {},
                  "properties": {
                    "platform": {
                      "title": "Platform",
                      "type": "object",
                      "default": {},
                      "properties": {
                        "name": {
                          "title": "Name",
                          "type": "string",
                          "default": "Instagram"
                        },
                        "profile_url": {
                          "title": "Profile URL",
                          "type": "string",
                          "default": "https://www.instagram.com/default_profile"
                        },
                        "username": {
                          "title": "Username",
                          "type": "string",
                          "default": "@default_username"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "portfolio_pdf": {
          "title": "Portfolio PDF",
          "type": "object",
          "default": {},
          "description": "Check if you would like to display portfolio button on the website.",
          "properties": {
            "enable": {
              "title": "",
              "type": "boolean",
              "default": false
            }
          },
          "if": {
            "properties": {
              "enable": {
                "const": true
              }
            }
          },
          "then": {
            "properties": {
              "url": {
                "type": "string",
                "default": "https://example.com",
                "description": "If left empty it will display 'On Request' button. Otherwise it will link to pdf."
              }
            },
            "required": ["url"]
          }
        }
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "general": {
      "title": "General",
      "$ref": "#/definitions/GeneralProperties"
    },
    "details": {
      "type": "object",
      "title": "Details",
      "properties": {
        "subtitle": {
          "type": "string",
          "title": "Subtitle"
        },
        "description": {
          "type": "string",
          "title": "Description"
        },
        "start_date": {
          "type": "string",
          "format": "date-time",
          "title": "Start Date"
        },
        "end_date": {
          "type": "string",
          "format": "date-time",
          "title": "End Date",
          "errorMessage": {
            "format": "End date must be equal to or later than start date."
          }
        },
        "venue": {
          "type": "string",
          "title": "Venue"
        },

        "external_urls": {
          "type": "array",
          "title": "External URLs",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri",
                "title": "URL",
                "default": "https://example.com/dogs"
              }
            },
            "required": ["url"]
          }
        },

        "images": {
          "type": "array",
          "title": "Images",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "default": []
        }
      },
      "required": ["title"],
      "additionalProperties": false
    }
  },
  "required": ["general", "details"],
  "definitions": {
    "GeneralProperties": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "title": "Title",
          "minLength": 3,
          "default": "Example Title"
        },
        "slug": {
          "type": "string",
          "title": "Slug"
        },
        "tags": {
          "type": "array",
          "title": "Tags",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "public": {
          "type": "boolean",
          "title": "Public",
          "default": true
        }
      },
      "required": ["title"]
    }
  }
}
